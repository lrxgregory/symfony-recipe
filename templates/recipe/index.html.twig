{% extends 'base.html.twig' %}

{% block title %}
	Toutes les recettes
{% endblock %}

{% block body %}

	<table class="table">
		<thead>
			<tr>
				<th>Titre</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for recipe in recipes %}
				<tr>
					<td>
						<a href=" {{ path('recipe.show', {id: recipe.id, slug: recipe.slug} ) }}">{{ recipe.title }}</a>
					</td>
					<td>
						<div class="d-flex gap-1">
							<a href="{{ path('recipe.edit', {id: recipe.id}) }}" class="btn btn-primary btn-sm">Ã‰diter</a>
							<form action="{{ path('recipe.delete', {id: recipe.id}) }}" method="post">
								<input type="hidden" name="_method" value="DELETE">
								<button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
							</form>
						</div>

					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<button class="btn btn-secondary" href="{{ path('recipe.create') }}">
		<a class="text-decoration-none text-reset" href="{{ path('recipe.create') }}">Ajouter une nouvelle recette</a>
	</button>
{% endblock %}
